<h2>My lists</h2>


<div class="row" style="height: 300px;">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none text-center text-white" do %>
          <div class="card h-100 m-2 text_center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(list.photo.key) if list.photo.attached? %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
